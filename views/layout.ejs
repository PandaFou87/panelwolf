<!doctype html>
<html lang="fr" class="h-full">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title><%= typeof title !== 'undefined' ? title + ' • ' : '' %>Wolf Panel</title>
  <!-- Tailwind CDN -->
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = { theme: { extend: { colors: { wolf: { primary: '#2b82f6' } } } } }
  </script>
</head>
<body class="h-full bg-zinc-950 text-zinc-100">
  <div class="min-h-full">
    <!-- Header -->
    <header class="border-b border-zinc-800 bg-zinc-900/70 backdrop-blur">
      <div class="mx-auto max-w-6xl px-4 py-3 flex items-center justify-between">
        <a href="/" class="flex items-center gap-2 text-zinc-100">
          <span class="inline-block h-3 w-3 rounded-full bg-wolf-primary"></span>
          <span class="font-semibold tracking-wide">Wolf • Panel</span>
        </a>
        <nav class="flex items-center gap-4 text-sm text-zinc-300">
          <a href="/" class="hover:text-white">Accueil</a>
          <a href="/tickets" class="hover:text-white">Tickets</a>
        </nav>
      </div>
    </header>

    <!-- Main -->
    <main class="mx-auto max-w-6xl px-4 py-8">
      <%- body %>
    </main>

    <!-- Footer -->
    <footer class="mx-auto max-w-6xl px-4 py-6 text-xs text-zinc-500">
      Fait avec ❤️ pour Wolf — TailwindCSS
    </footer>
  </div>
</body>
</html>
