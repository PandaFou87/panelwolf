<section class="max-w-2xl">
  <h1 class="text-2xl font-semibold mb-4">Tickets</h1>

  <form method="post" action="/tickets" class="space-y-5 rounded-2xl border border-zinc-800 bg-zinc-900 p-6">
    <div>
      <label class="block text-sm mb-1 text-zinc-300">Salon de logs (ID)</label>
      <input name="salon" value="<%= config.salon %>" class="w-full rounded-lg border border-zinc-700 bg-zinc-950 px-3 py-2 text-sm outline-none focus:ring-2 focus:ring-wolf-primary" placeholder="1380454863808368660" />
    </div>

    <div>
      <label class="block text-sm mb-1 text-zinc-300">Rôles autorisés (IDs, séparés par des virgules)</label>
      <input name="roles" value="<%= config.roles %>" class="w-full rounded-lg border border-zinc-700 bg-zinc-950 px-3 py-2 text-sm outline-none focus:ring-2 focus:ring-wolf-primary" placeholder="123,456" />
    </div>

    <div>
      <label class="block text-sm mb-1 text-zinc-300">Couleur d’embed (hex)</label>
      <input name="couleur" value="<%= config.couleur %>" class="w-40 rounded-lg border border-zinc-700 bg-zinc-950 px-3 py-2 text-sm outline-none focus:ring-2 focus:ring-wolf-primary" placeholder="#2b82f6" />
    </div>

    <div class="flex gap-3">
      <button class="rounded-lg bg-wolf-primary px-4 py-2 text-sm font-medium text-white hover:opacity-90">Enregistrer</button>
      <a href="/" class="rounded-lg border border-zinc-700 px-4 py-2 text-sm text-zinc-200 hover:bg-zinc-800">Annuler</a>
    </div>
  </form>
</section>

